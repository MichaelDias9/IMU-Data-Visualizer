{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "cmake configure",
        "type": "shell",
        "command": "cmake",
        "args": [
          "-S", ".",
          "-B", "build",
          "-DCMAKE_BUILD_TYPE=Debug"
        ],
        "group": "build"
      },
      {
        "label": "cmake build",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build", "build"
        ],
        "dependsOn": ["cmake configure"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  